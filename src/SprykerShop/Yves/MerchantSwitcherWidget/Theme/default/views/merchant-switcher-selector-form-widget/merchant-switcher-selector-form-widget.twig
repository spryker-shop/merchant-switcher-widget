{% extends template('widget') %}

{% define data = {
    merchantList: _widget.activeMerchantTransfers | default([]),
    currentMerchantReference: _widget.selectedMerchantReference | default,
} %}

{% block body %}
    {% if data.merchantList %}
        {% include molecule('merchant-selector', 'MerchantSwitcherWidget') with {
            data: {
                merchantList: data.merchantList,
                currentMerchantReference: data.currentMerchantReference,
            },
        } only %}
    {% endif %}
{% endblock %}
